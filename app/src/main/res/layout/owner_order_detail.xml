<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp">

    <!-- Tiêu đề của giao diện chi tiết đơn hàng -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Chi tiết đơn hàng"
        android:textSize="20sp"
        android:fontFamily="sans-serif-medium"
        android:layout_gravity="center"
        android:paddingBottom="8dp" />

    <!-- Thông tin khách hàng -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingBottom="16dp">

        <TextView
            android:id="@+id/orderId"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Mã đơn hàng: #23102024-222033"
            android:textSize="16sp"
            android:paddingBottom="4dp" />

        <TextView
            android:id="@+id/customerName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Tên khách hàng: Nguyễn Văn A"
            android:textSize="16sp"
            android:paddingBottom="4dp" />

        <TextView
            android:id="@+id/customerPhone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Số điện thoại: 0123456789"
            android:textSize="16sp"
            android:paddingBottom="4dp" />

        <TextView
            android:id="@+id/customerAddress"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Địa chỉ: 123 Đường ABC, Quận 1, TP. HCM"
            android:textSize="16sp" />
    </LinearLayout>

    <!-- RecyclerView để hiển thị các món trong đơn hàng -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerView_order_items"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:divider="?android:attr/listDivider"
        android:dividerHeight="1dp"
        android:padding="8dp" />

    <!-- Hiển thị tổng giá trị đơn hàng -->
    <TextView
        android:id="@+id/orderTotal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Tổng cộng: 40.000đ"
        android:textSize="18sp"
        android:gravity="end"
        android:paddingTop="16dp"
        android:textColor="#FF5722" />

    <!-- Nút điều chỉnh trạng thái đơn hàng -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:paddingTop="16dp">

        <!-- Nút Hủy đơn hàng -->
        <Button
            android:id="@+id/btnCancelOrder"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Hủy" />

        <!-- Nút Thay đổi trạng thái đơn hàng -->
        <Button
            android:id="@+id/btnChangeOrderStatus"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Thay đổi trạng thái đơn hàng"
            android:layout_marginStart="16dp" />
    </LinearLayout>
</LinearLayout>


